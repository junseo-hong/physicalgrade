  <option value="비뇨기과">비뇨기과</option>
  <option value="치과">치과</option>
</select>
</div>    

</div>
</div>

<div class="container-fluid px-0" id="container-description">

<% for (let i=0; i<categories.length; i++){%>
  <div>
    <input class="form-check-input" id="<%=categories[i]%>" type="checkbox" value="<%=categories[i]%>" name="selectedCategories"></input>
    <label id="<%=categoryClasses[i]%><%=categories[i]%>-label" class="form-check-label" for="<%=categories[i]%>"><%=categories[i]%></label>
  </div>
  <% }%>
</div>

<div class="d-flex justify-content-center">
<button class ="btn btn-primary" id="submitButton">예상 신체등급 계산하기
</button>



</div>
</form>



<script>
$(function () {
    $('.btn-check').on('change', function () {
        var query = this.value;
        $('.form-check-label').each(function (i, elem) {
            if (query=="전체") {
            $(this).show();
            $(this).prev(':checkbox').show();
            $(this).next('br').show();
            }
            else if ($(this).attr('id').indexOf(query) != -1) {
                $(this).show();
                $(this).prev(':checkbox').show();
                $(this).next('br').show();
            } else {
                $(this).hide();
                $(this).prev(':checkbox').hide();
                 $(this).next('br').hide();
            }
        });
    });
});</script>

