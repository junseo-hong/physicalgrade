  <label class="btn btn-outline-primary" for="성형외과">성형외과</label>

  <input type="radio" class="btn-check" name="btnradio" id="이비인후과" autocomplete="off" value="이비인후과">
  <label class="btn btn-outline-primary" for="이비인후과">이비인후과</label>

  <input type="radio" class="btn-check" name="btnradio" id="안과" autocomplete="off" value="안과">
  <label class="btn btn-outline-primary" for="안과">안과</label>

  <input type="radio" class="btn-check" name="btnradio" id="비뇨기과" autocomplete="off" value="비뇨기과">
  <label class="btn btn-outline-primary" for="비뇨기과">비뇨기과</label>

  <input type="radio" class="btn-check" name="btnradio" id="치과" autocomplete="off" value="치과">
  <label class="btn btn-outline-primary" for="치과">치과</label>

</div>

<div class = "d-sm-none"> 
<select class="form-select" aria-label="Default select example">
  <option selected>진료과 선택</option>
  <option value="전체">전체</option>
  <option value="정형외과">정형외과</option>
  <option value="외애과">외과</option>
  <option value="내과">내과</option>
  <option value="신경과">신경과</option>
  <option value="신경외과">신경외과</option>
  <option value="흉부외과">흉부외과</option>
  <option value="정신건강의학과">정신건강의학과</option>
  <option value="피부과">피부과</option>
  <option value="성형외과">성형외과</option>
  <option value="이비인후과">이비인후과</option>
